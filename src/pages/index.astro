---
import MainLayout from "../layouts/MainLayout.astro";
import SpeakersCarousel from '../components/CurrentSpeakers.jsx';
import PastSpeakers from "../components/PastSpeakers.jsx";
import FAQPage from "../components/FAQ.jsx";

import SponsorsComponent from '../components/Sponsors.jsx';
---

<MainLayout title="TEDxLNMIIT">
  <!-- HERO SECTION -->
 <section 
  class="relative flex flex-col items-center justify-center bg-black min-h-[calc(100vh-80px)] overflow-hidden pt-4"
>
  <!-- Sculpture Image -->
  <img 
    src="/images/MainElement2.png"  
    alt="TEDx LNMIIT Hero" 
    loading="lazy"
    width="800"
    height="600"
    class="object-contain w-auto 
           max-h-[70vh] 
           md:max-h-[85vh] 
           transition-opacity duration-500 opacity-0"
    onload="this.style.opacity='1'"
  />

  <!-- Title Image -->
  <div class="mt-6 flex justify-center items-center">
    <img 
      src="/graphics/ForgingTheFuture.png"
      alt="Forging the Future"
      class="max-w-[80vw] md:max-w-[50vw] h-auto object-contain drop-shadow-[0_0_25px_#ff000066]"
      loading="lazy"
    />
  </div>
</section>

  <!-- TEASER VIDEO SECTION -->
<section class="w-full bg-black py-20 px-6 flex justify-center">
  <div class="max-w-5xl w-full border-2 border-red-700 rounded-2xl overflow-hidden shadow-[0_0_25px_#ff0000aa]">
    <iframe
      src="https://www.youtube.com/embed/xGv4oAeEe6M?autoplay=1&mute=1&loop=1&playlist=xGv4oAeEe6M&controls=0"
      title="TEDxLNMIIT Teaser"
      class="hidden md:block w-full aspect-video"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    ></iframe>

    <iframe
      src="https://www.youtube.com/embed/xGv4oAeEe6M?mute=1&loop=1&playlist=xGv4oAeEe6M&controls=1"
      title="TEDxLNMIIT Teaser"
      class="block md:hidden w-full aspect-video"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    ></iframe>
  </div>
</section>


<!-- COUNTDOWN SECTION -->
<section class="relative w-full bg-gradient-to-b from-black to-[#120000] py-20 flex flex-col items-center text-center px-4">
  <!-- Heading -->
  <h2 class="text-4xl md:text-6xl font-extrabold mb-10">
    <span class="text-white">HELLO</span>
    <span class="text-red-600 ml-2">EXPLORER</span>
  </h2>

  <!-- Countdown Container -->
  <div class="bg-black/70 border border-red-600 px-6 py-8 md:px-12 md:py-10 rounded-2xl shadow-[0_0_25px_#ff000044] backdrop-blur-sm w-full max-w-3xl mx-auto">
  <div class="text-gray-300 mb-6 tracking-widest uppercase text-sm md:text-base text-center">
    Time Until the Event
  </div>

  <!-- Countdown Boxes -->
  <div id="countdown" 
       class="grid grid-cols-2 sm:grid-cols-4 gap-4 sm:gap-6 justify-center items-center">
    <div class="count-box">
      <div id="days" class="count-number">0</div>
      <div class="count-label">Days</div>
    </div>
    <div class="count-box">
      <div id="hours" class="count-number">0</div>
      <div class="count-label">Hours</div>
    </div>
    <div class="count-box">
      <div id="minutes" class="count-number">0</div>
      <div class="count-label">Minutes</div>
    </div>
    <div class="count-box">
      <div id="seconds" class="count-number">0</div>
      <div class="count-label">Seconds</div>
    </div>
  </div>
</div>

  <!-- Description -->
  <p class="max-w-2xl text-lg md:text-xl mt-12 leading-relaxed font-medium text-gray-200">
    Join us as we bring <span class="text-red-500 font-semibold">bold ideas</span> and pioneers together â€” 
    a celebration of <span class="text-white font-semibold">creativity</span>, 
    <span class="text-red-500 font-semibold">innovation</span>, and the people shaping tomorrow.
  </p>
</section>

<style>
  .count-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: radial-gradient(circle at center, rgba(255, 0, 0, 0.15) 0%, rgba(20, 0, 0, 0.8) 100%);
    border: 1.5px solid rgba(255, 0, 0, 0.5);
    border-radius: 1rem;
    padding: 1rem 0.75rem;
    box-shadow: 0 0 10px rgba(255, 0, 0, 0.15);
    transition: none; /* ðŸ”’ removes hover animations */
    min-width: 65px;
  }

  .count-number {
    font-size: 1.8rem;
    font-weight: 800;
    color: #fff;
    text-shadow: 0 0 10px rgba(255, 0, 0, 0.5);
  }

  .count-label {
    margin-top: 0.3rem;
    color: #e5e5e5;
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 1px;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .count-number {
      font-size: 1.5rem;
    }
    .count-label {
      font-size: 0.7rem;
    }
    .count-box {
      padding: 0.8rem 0.6rem;
      border-radius: 0.75rem;
    }
  }
</style>


<SpeakersCarousel client:visible/>

<h1
      class="text-4xl text-center md:text-6xl font-extrabold uppercase tracking-widest 
             bg-gradient-to-r from-red-700 to-gray-500 bg-clip-text text-transparent"
    >
      Past Speakers
    </h1>
<PastSpeakers client:visible/>

<SponsorsComponent client:visible/>

<FAQPage client:visible/>


</MainLayout>







<!-- COUNTDOWN SCRIPT -->
<script type="module">
  const EVENT_ISO = '2026-01-10T09:00:00+05:30';

  (function initCountdown() {
    const daysEl = document.getElementById('days');
    const hoursEl = document.getElementById('hours');
    const minutesEl = document.getElementById('minutes');
    const secondsEl = document.getElementById('seconds');

    function update() {
      const now = new Date();
      const target = new Date(EVENT_ISO);
      const diff = target - now;
      if (diff <= 0) {
        [daysEl, hoursEl, minutesEl, secondsEl].forEach(el => el.textContent = '0');
        clearInterval(interval);
        return;
      }

      const totalSeconds = Math.floor(diff / 1000);
      const secs = totalSeconds % 60;
      const mins = Math.floor(totalSeconds / 60) % 60;
      const hrs = Math.floor(totalSeconds / 3600) % 24;
      const days = Math.floor(totalSeconds / 86400);

      daysEl.textContent = days;
      hoursEl.textContent = String(hrs).padStart(2, '0');
      minutesEl.textContent = String(mins).padStart(2, '0');
      secondsEl.textContent = String(secs).padStart(2, '0');
    }

    update();
    const interval = setInterval(update, 1000);
  })();
</script>
